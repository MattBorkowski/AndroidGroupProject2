<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <Button
        android:text="Return to bluetooth selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:onClick="teacherBluetoothInterface"
        android:id="@+id/bluetooth_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:textColor="@android:color/holo_green_light"
        android:backgroundTint="@color/black"
        android:elevation="7dp" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/bluetooth_button"
        android:layout_alignBottom="@+id/bluetooth_button"
        android:layout_toRightOf="@+id/bluetooth_button"
        android:layout_toEndOf="@+id/bluetooth_button"
        android:textColor="@android:color/holo_green_light"
        android:backgroundTint="@color/black"
        android:elevation="7dp" />

    <CheckBox
        android:text="Can Bluetooth products be used on aircrafts?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:id="@+id/checkBox2"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_light"
        app:buttonTint="@android:color/holo_green_light"
        android:checked="false" />

    <CheckBox
        android:text="Will Bluetooth and WLAN interfere with each other?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2"
        android:id="@+id/checkBox3"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_light"
        app:buttonTint="@android:color/holo_green_light" />

    <CheckBox
        android:text="Is Bluetooth practical for use with mobile devices?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3"
        android:id="@+id/checkBox4"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_light"
        app:buttonTint="@android:color/holo_green_light" />

    <TextView
        android:text="Questions:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/checkBox"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignStart="@+id/checkBox" />

    <CheckBox
        android:text="What is Bluetooth?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_light"
        app:buttonTint="@android:color/holo_green_light"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/bluetooth_button"
        android:layout_alignStart="@+id/bluetooth_button" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4"
        android:id="@+id/editText"
        android:textColorHint="@android:color/holo_green_light"
        android:hint="Enter custom question!"
        android:singleLine="true"
        android:textColor="@android:color/holo_green_light" />

</RelativeLayout>